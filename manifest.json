{
  "manifest_version": 3,
  "name": "SecGuard ReAct 助手",
  "description": "对话式安全告警助手，支持自定义大模型与MCP工具链。",
  "version": "0.1.0",
  "action": {
    "default_title": "打开 SecGuard 侧栏"
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "https://*/*",
    "http://localhost/*"
  ]
}

